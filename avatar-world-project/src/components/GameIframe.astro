---
interface Props {
  src: string;
  title: string;
  description: string;
  fallbackText?: string;
}

const { src, title, description, fallbackText = "If the game doesn't load, please try refreshing the page or check your browser settings." } = Astro.props;
---

<figure class="game-container" itemscope itemtype="https://schema.org/VideoGame">
  <div class="game-wrapper">
    <iframe
      src={src}
      title={title}
      loading="eager"
      allowfullscreen
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; fullscreen; gamepad; xr-spatial-tracking"
      sandbox="allow-scripts allow-same-origin allow-popups allow-forms allow-pointer-lock allow-modals allow-downloads allow-top-navigation-by-user-activation"
      itemprop="embedUrl"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
    <div class="game-loading">
      <div class="loading-spinner"></div>
      <p>Loading Avatar World...</p>
    </div>
    <div class="game-error" style="display: none;">
      <p>{fallbackText}</p>
    </div>
  </div>
  <figcaption itemprop="description">{description}</figcaption>
</figure>

<style>
  .game-container {
    margin: 2rem 0;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(255, 107, 157, 0.3);
    border: 3px solid #FF6B9D;
    background: linear-gradient(135deg, #1a1a2e, #16213e);
  }

  .game-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background: #0a0a14;
  }

  .game-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    z-index: 2;
  }

  figcaption {
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(78, 205, 196, 0.1));
    color: var(--text-light);
    font-size: 0.95rem;
    line-height: 1.6;
    text-align: center;
    border-top: 1px solid rgba(255, 107, 157, 0.3);
  }

  .game-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #4ECDC4;
    z-index: 1;
    pointer-events: none;
  }

  .loading-spinner {
    border: 4px solid rgba(255, 107, 157, 0.3);
    border-top: 4px solid #FF6B9D;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  .game-loading p {
    font-size: 1.1rem;
    font-weight: 600;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .game-error {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: var(--text-light);
    background: rgba(0, 0, 0, 0.9);
    padding: 2rem;
    border-radius: 12px;
    max-width: 80%;
    border: 2px solid #FF6B9D;
  }

  @media (max-width: 768px) {
    .game-container {
      margin: 1.5rem 0;
      border-radius: 12px;
    }

    .game-wrapper {
      padding-bottom: 75%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const iframes = document.querySelectorAll('.game-wrapper iframe');
    
    iframes.forEach((iframe) => {
      const wrapper = iframe.closest('.game-wrapper');
      const loadingEl = wrapper?.querySelector('.game-loading');
      const errorEl = wrapper?.querySelector('.game-error');
      
      iframe.addEventListener('load', () => {
        if (loadingEl) {
          (loadingEl as HTMLElement).style.display = 'none';
        }
      });
      
      setTimeout(() => {
        if (loadingEl && (loadingEl as HTMLElement).style.display !== 'none') {
          (loadingEl as HTMLElement).style.display = 'none';
          if (errorEl) {
            (errorEl as HTMLElement).style.display = 'block';
          }
        }
      }, 20000);
      
      iframe.addEventListener('error', () => {
        if (loadingEl) {
          (loadingEl as HTMLElement).style.display = 'none';
        }
        if (errorEl) {
          (errorEl as HTMLElement).style.display = 'block';
        }
      });
    });
  });
</script>
