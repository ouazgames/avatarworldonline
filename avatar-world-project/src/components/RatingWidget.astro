---
interface Props {
  rating?: number;
  ratingCount?: number;
  gameName?: string;
}

const { 
  rating = 4.8, 
  ratingCount = 245000,
  gameName = "Avatar World"
} = Astro.props;

const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;
const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
---

<div class="rating-widget" itemscope itemtype="https://schema.org/AggregateRating">
  <div class="rating-display">
    <div class="stars" aria-label={`Rating ${rating} out of 5 stars`}>
      {Array.from({ length: fullStars }).map(() => (
        <svg class="star filled" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      ))}
      {hasHalfStar && (
        <svg class="star half" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77V2z"/>
        </svg>
      )}
      {Array.from({ length: emptyStars }).map(() => (
        <svg class="star empty" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      ))}
    </div>
    <div class="rating-info">
      <span class="rating-value" itemprop="ratingValue">{rating}</span>
      <span class="rating-separator">/</span>
      <span class="rating-max" itemprop="bestRating">5</span>
      <span class="rating-count">({ratingCount.toLocaleString()} <span itemprop="ratingCount" style="display:none">{ratingCount}</span> ratings)</span>
    </div>
  </div>
  <meta itemprop="itemReviewed" content={gameName} />
  <meta itemprop="worstRating" content="1" />
</div>

<style>
  .rating-widget {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(78, 205, 196, 0.1));
    border: 2px solid #FFE66D;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(255, 230, 109, 0.2);
    margin: 1rem 0;
  }

  .rating-display {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .stars {
    display: flex;
    gap: 0.25rem;
  }

  .star {
    width: 28px;
    height: 28px;
  }

  .star.filled {
    color: #FFE66D;
    filter: drop-shadow(0 0 4px rgba(255, 230, 109, 0.5));
  }

  .star.half {
    color: #FFE66D;
  }

  .star.empty {
    color: rgba(255, 255, 255, 0.3);
  }

  .rating-info {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    font-weight: 700;
  }

  .rating-value {
    font-size: 1.75rem;
    color: #FFE66D;
  }

  .rating-separator,
  .rating-max {
    font-size: 1.25rem;
    color: var(--text-light);
  }

  .rating-count {
    font-size: 0.95rem;
    color: var(--text-light);
    margin-left: 0.5rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .rating-widget {
      flex-direction: column;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
    }

    .rating-display {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
